<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="mariadb-localhost">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>lernapp.model.User</class>
        <class>lernapp.model.Question</class>
        <!--<exclude-unlisted-classes>false</exclude-unlisted-classes>-->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />
            <property name="hibernate.archive.autodetection" value="class, hbm" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/test?user=root&amp;password=" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
            <!-- <property name="javax.persistence.schema-generation.database.action" value="none" /> -->
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
