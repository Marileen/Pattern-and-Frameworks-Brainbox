<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}:%level{length=5}:%logger{1.}:%t: %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <!--<Logger name="org.glassfish.jersey.server.ServerRuntime" level="FINER"/>-->
    </Loggers>
</Configuration>
